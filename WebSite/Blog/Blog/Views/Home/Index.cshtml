@{
    ViewBag.Title = "Home";
}

@model List<Blog.Models.Post>
<section class="row">
        

@foreach (var post in Model)
{
    <article class="post col-md-6">
    <h2 class="title"@post.Title></h2>
        <div class="about">
            Published 
            @if (post.Author != null)
            {
                @:by
                <i>@post.Author.FullName (@post.Author.UserName)</i> 
            }
            on <i>@post.Date</i>
        </div>
        <div class="body">@Html.Raw(post.Body)</div>
    </article>
}
</section>